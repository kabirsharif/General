		int i = 1;
		int sumEven = 0;
		int sumOdd = 0;
		int evenCounter=0;
		int oddCounter=0;

		while( i > 0 ) {
			i = stdin.nextInt();
			if( i % 2 == 0 && i > 0) {
				sumEven=sumEven+i;
				evenCounter++;
			}
			else if ( i % 2 != 0 && i > 0) {
				sumOdd=sumOdd+i;
				oddCounter++;
			}
		}
			System.out.print(sumEven+" "+sumOdd+" "+evenCounter+" "+oddCounter);
	
